<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kinopoisk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">#3D3BFF</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_Skillcinema">
        <item name="android:textColor">#272727</item>
        <item name="android:text">Skillcinema</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_skip">
        <item name="android:textColor">#B5B5C9</item>
        <item name="android:text">Пропустить</item>
        <item name="android:textSize">15sp</item>

        <item name="android:textStyle">normal</item>
    </style>
</resources>