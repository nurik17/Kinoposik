<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kinopoisk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">#3D3BFF</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_Skillcinema">
        <item name="android:textColor">#272727</item>
        <item name="android:text">Skillcinema</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_skip">
        <item name="android:textColor">#B5B5C9</item>
        <item name="android:text">Пропустить</item>
        <item name="android:textSize">15sp</item>

        <item name="android:textStyle">normal</item>
    </style>

    <style name="film_info">
        <item name="android:textColor">#B5B5C9</item>
        <item name="fontFamily">@font/graphik_500</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="Widget.MyApp.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/text_color_chip_state</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="ToogleButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/graphik_500</item>
        <item name="android:textColor">@drawable/toogle_text_color</item>
        <item name="backgroundTint">@drawable/toogle_button_background</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="settingsTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/graphik_400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="settingsTextTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/graphik_400</item>
        <item name="android:textColor">#838390</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="sliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="android:layout_marginTop">5dp</item>
        <item name="tickVisible">false</item>
        <item name="trackColorActive">#3D3BFF</item>
        <item name="trackColorInactive">#4DB5B5C9</item>
        <item name="thumbColor">@color/white</item>
        <item name="thumbElevation">1dp</item>
        <item name="thumbStrokeWidth">1dp</item>
        <item name="thumbRadius">12dp</item>
    </style>
</resources>